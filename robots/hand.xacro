<?xml version="1.0" encoding="utf-8"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="hand">
  <!-- safety_distance: Minimum safety distance in [m] by which the collision volumes are expanded and which is enforced during robot motions -->
  <xacro:macro name="hand" params="connected_to:='' ns:='' rpy:='0 0 0' xyz:='0 0 0'">
    <xacro:unless value="${connected_to == ''}">
      <joint name="${ns}_hand_joint" type="fixed">
        <parent link="${connected_to}"/>
        <child link="${ns}_hand"/>
        <origin xyz="${xyz}" rpy="${rpy}"/>
      </joint>
    </xacro:unless>
    <link name="${ns}_hand">
      <visual>
        <origin rpy="0 0 0" xyz="0.0 0.4142 -0.413"/>
        <geometry>
          <mesh filename="package://gtu_polar_arm_description/meshes/hand.stl"/>
        </geometry>
      </visual>
      <collision>
        <origin rpy="0 0 0" xyz="0.0 0.4142 -0.413"/>
        <geometry>
          <mesh filename="package://gtu_polar_arm_description/meshes/hand.stl"/>
        </geometry>
      </collision>
    </link>
    <link name="${ns}_leftfinger">
      <visual>
        <origin rpy="0 0 0" xyz="-0.0143 0.4176 -0.3523"/>
        <geometry>
          <mesh filename="package://gtu_polar_arm_description/meshes/finger_l.stl"/>
        </geometry>
      </visual>
      <!-- <collision>
        <origin rpy="0 0 0" xyz="-0.0143 0.4176 -0.3523"/>
        <geometry>
          <mesh filename="package://gtu_polar_arm_description/meshes/finger.stl"/>
        </geometry>
      </collision> -->
    </link>
    <link name="${ns}_rightfinger">
      <visual>
        <origin rpy="0 0 0" xyz="0.0137 0.4177 -0.3521"/>
        <geometry>
          <mesh filename="package://gtu_polar_arm_description/meshes/finger_r.stl"/>
        </geometry>
      </visual>
      <!-- <collision>
        <origin rpy="0 0 0" xyz="0.0137 0.4177 -0.3521"/>
        <geometry>
          <mesh filename="package://gtu_polar_arm_description/meshes/finger.stl"/>
        </geometry>
      </collision> -->
   </link>
    <joint name="${ns}_finger_joint1" type="revolute">
      <parent link="${ns}_hand"/>
      <child link="${ns}_leftfinger"/>
      <origin rpy="0 0 0" xyz="0.0143 -0.0034 -0.0607"/>
      <axis xyz="0.0048 -1.0 0.0"/>
      <limit effort="20" lower="0.0" upper="0.04" velocity="0.2"/>
      <mimic joint="${ns}_finger_joint2" />
    </joint>
    <joint name="${ns}_finger_joint2" type="revolute">
      <parent link="${ns}_hand"/>
      <child link="${ns}_rightfinger"/>
      <origin rpy="0 0 0" xyz="-0.0137 -0.0035 -0.0609"/>
      <axis xyz="0.0048 -1.0 0.0"/>
      <limit effort="20" lower="0.0" upper="0.04" velocity="0.2"/>
    </joint>
  </xacro:macro>
</robot>
