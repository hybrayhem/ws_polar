<?xml version='1.0' encoding='utf-8'?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="gtu_polar">
  <!-- safety_distance: Minimum safety distance in [m] by which the collision volumes are expanded and which is enforced during robot motions -->
  <!-- arm_id: Namespace of the gtu_polar arm. Serves to differentiate between arms in case of multiple instances. -->
  <xacro:macro name="gtu_polar_arm" params="arm_id:='gtu_polar' description_pkg:='gtu_polar_arm_description' connected_to:='' xyz:='0 0 0' rpy:='0 0 0'">
    <xacro:unless value="${not connected_to}">
      <joint name="${arm_id}_joint_${connected_to}" type="fixed">
        <parent link="${connected_to}"/>
        <child link="${arm_id}_link0"/>
        <origin rpy="${rpy}" xyz="${xyz}"/>
      </joint>
    </xacro:unless>

    <xacro:property name="joint_damping" value="0.0"/>
    <xacro:property name="joint_friction" value="0.0"/>
    <xacro:property name="safety_k_position" value="100.0"/>
    <xacro:property name="safety_k_velocity" value="40.0"/>

    <link name="world" />
    <joint name="robot_to_world" type="fixed">
      <parent link="world" />
      <child link="${arm_id}_link0" />
      <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
    </joint>

    <link name="${arm_id}_link0">
      <visual>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <geometry>
          <mesh filename="package://${description_pkg}/meshes/link0.dae"/>
        </geometry>
      </visual>
      <collision>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <geometry>
          <mesh filename="package://${description_pkg}/meshes/link0.dae"/>
        </geometry>
      </collision>
      <inertial>
        <origin rpy="0 0 0" xyz="-0.0003 -0.0 0.0620"/>
        <mass value="4.6095708525443"/>
        <inertia ixx="0.009798" ixy="1.7e-05" ixz="-2.3e-05" iyy="0.006363" iyz="0.0" izz="0.014537"/>
      </inertial>
    </link>

    <link name="${arm_id}_link1">
      <visual>
        <origin rpy="0 0 0" xyz="0.0005 0.0 -0.095"/>
        <geometry>
          <mesh filename="package://${description_pkg}/meshes/link1.dae"/>
        </geometry>
      </visual>
      <collision>
        <origin rpy="0 0 0" xyz="0.0005 0.0 -0.095"/>
        <geometry>
          <mesh filename="package://${description_pkg}/meshes/link1.dae"/>
        </geometry>
      </collision>
      <inertial>
        <origin rpy="0 0 0" xyz="-0.00026664559304489155 0.04142853686705264 0.01398800228501125"/>
        <mass value="5.696621742512526"/>
        <inertia ixx="0.020531" ixy="-2e-05" ixz="-0.000102" iyy="0.025933" iyz="-0.001156" izz="0.04291"/>
      </inertial>
    </link>
    <joint name="${arm_id}_joint1" type="revolute">
      <safety_controller k_position="${safety_k_position}" k_velocity="${safety_k_velocity}" soft_lower_limit="${-1.2*pi}" soft_upper_limit="${1.2*pi}"/>
      <origin rpy="0 0 0" xyz="-0.0005 0.0 0.095"/>
      <parent link="${arm_id}_link0"/>
      <child link="${arm_id}_link1"/>
      <axis xyz="-0.0048 0.0 1.0"/>
      <limit effort="87" lower="${-1.2*pi}" upper="${1.2*pi}" velocity="2.1750"/>
      <dynamics damping="${joint_damping}" friction="${joint_friction}"/>
    </joint>

    <link name="${arm_id}_link2">
      <visual>
        <origin rpy="0 0 0" xyz="0.0001 -0.064 -0.144"/>
        <geometry>
          <mesh filename="package://${description_pkg}/meshes/link2.dae"/>
        </geometry>
      </visual>
      <collision>
        <origin rpy="0 0 0" xyz="0.0001 -0.064 -0.144"/>
        <geometry>
          <mesh filename="package://${description_pkg}/meshes/link2.dae"/>
        </geometry>
      </collision>
      <inertial>
        <origin rpy="0 0 0" xyz="-0.0011265793423361435 -0.010179751209976586 0.2445690931693241"/>
        <mass value="6.303421578081501"/>
        <inertia ixx="0.130072" ixy="-2.8e-05" ixz="0.000325" iyy="0.111856" iyz="0.024122" izz="0.038419"/>
      </inertial>
    </link>
    <joint name="${arm_id}_joint2" type="revolute">
      <safety_controller k_position="${safety_k_position}" k_velocity="${safety_k_velocity}" soft_lower_limit="-0.96" soft_upper_limit="0.35"/>
      <origin rpy="0 0 0" xyz="-0.0005 0.064 0.049"/>
      <parent link="${arm_id}_link1"/>
      <child link="${arm_id}_link2"/>
      <axis xyz="-1.0 -0.0048 -0.0048"/>
      <limit effort="87" lower="-0.96" upper="0.35" velocity="2.1750"/>
      <dynamics damping="${joint_damping}" friction="${joint_friction}"/>
    </joint>

    <link name="${arm_id}_link3">
      <visual>
        <origin rpy="0 0 0" xyz="0.0024 0.0797 -0.5865"/>
        <geometry>
          <mesh filename="package://${description_pkg}/meshes/link3.dae"/>
        </geometry>
      </visual>
      <collision>
        <origin rpy="0 0 0" xyz="0.0024 0.0797 -0.5865"/>
        <geometry>
          <mesh filename="package://${description_pkg}/meshes/link3.dae"/>
        </geometry>
      </collision>
      <inertial>
        <origin rpy="0 0 0" xyz="0.00023076822194436665 -0.0607138014809505 0.012742679114546629"/>
        <mass value="2.404395336728058"/>
        <inertia ixx="0.016491" ixy="7.1e-05" ixz="1.4e-05" iyy="0.004414" iyz="-0.002775" izz="0.016368"/>
      </inertial>
    </link>
    <joint name="${arm_id}_joint3" type="revolute">
      <safety_controller k_position="${safety_k_position}" k_velocity="${safety_k_velocity}" soft_lower_limit="-0.26" soft_upper_limit="0.87"/>
      <origin rpy="0 0 0" xyz="-0.0014 -0.1437 0.4425"/>
      <parent link="${arm_id}_link2"/>
      <child link="${arm_id}_link3"/>
      <axis xyz="1.0 0.0048 0.0048"/>
      <limit effort="87" lower="-0.26" upper="0.87" velocity="2.1750"/>
      <dynamics damping="${joint_damping}" friction="${joint_friction}"/>
    </joint>

    <link name="${arm_id}_link4">
      <visual>
        <origin rpy="0 0 0" xyz="0.0016 0.2627 -0.5865"/>
        <geometry>
          <mesh filename="package://${description_pkg}/meshes/link4.dae"/>
        </geometry>
      </visual>
      <collision>
        <origin rpy="0 0 0" xyz="0.0016 0.2627 -0.5865"/>
        <geometry>
          <mesh filename="package://${description_pkg}/meshes/link4.dae"/>
        </geometry>
      </collision>
      <inertial>
        <origin rpy="0 0 0" xyz="0.0003741376455528272 -0.0778739766529073 1.9851856895014564e-06"/>
        <mass value="1.4724336727005185"/>
        <inertia ixx="0.005177" ixy="1.6e-05" ixz="-4e-06" iyy="0.001869" iyz="0.0" izz="0.005924"/>
      </inertial>
    </link>
    <joint name="${arm_id}_joint4" type="revolute">
      <safety_controller k_position="${safety_k_position}" k_velocity="${safety_k_velocity}" soft_lower_limit="${-pi}" soft_upper_limit="${pi}"/>
      <origin rpy="0 0 0" xyz="0.0009 -0.1830 0.0"/>
      <parent link="${arm_id}_link3"/>
      <child link="${arm_id}_link4"/>
      <axis xyz="0.0048 -1.0 0.0"/>
      <limit effort="87" lower="${-pi}" upper="${pi}" velocity="2.1750"/>
      <dynamics damping="${joint_damping}" friction="${joint_friction}"/>
    </joint>

    <link name="${arm_id}_link5">
      <visual>
        <origin rpy="0 0 0" xyz="0.0008 0.4142 -0.5865"/>
        <geometry>
          <mesh filename="package://${description_pkg}/meshes/link5.dae"/>
        </geometry>
      </visual>
      <collision>
        <origin rpy="0 0 0" xyz="0.0008 0.4142 -0.5865"/>
        <geometry>
          <mesh filename="package://${description_pkg}/meshes/link5.dae"/>
        </geometry>
      </collision>
      <inertial>
        <origin rpy="0 0 0" xyz="0.011505440232523104 5.3376606865773724e-05 -0.056762648886386935"/>
        <mass value="2.254711737840762"/>
        <inertia ixx="0.010865" ixy="-1.3e-05" ixz="-0.001406" iyy="0.013556" iyz="-7e-06" izz="0.003964"/>
      </inertial>
    </link>
    <joint name="${arm_id}_joint5" type="revolute">
      <safety_controller k_position="${safety_k_position}" k_velocity="${safety_k_velocity}" soft_lower_limit="${-pi}" soft_upper_limit="0.96"/>
      <origin rpy="0 0 0" xyz="0.0007 -0.1515 0.0"/>
      <parent link="${arm_id}_link4"/>
      <child link="${arm_id}_link5"/>
      <axis xyz="1.0 0.0048 0.0048"/>
      <limit effort="12" lower="${-pi}" upper="0.96" velocity="2.6100"/>
      <dynamics damping="${joint_damping}" friction="${joint_friction}"/>
    </joint>

    <link name="${arm_id}_link6">
      <visual>
        <origin rpy="0 0 0" xyz="0.0 0.4142 -0.4235"/>
        <geometry>
          <mesh filename="package://${description_pkg}/meshes/link6.dae"/>
        </geometry>
      </visual>
      <collision>
        <origin rpy="0 0 0" xyz="0.0 0.4142 -0.4235"/>
        <geometry>
          <mesh filename="package://${description_pkg}/meshes/link6.dae"/>
        </geometry>
      </collision>
      <inertial>
        <origin rpy="0 0 0" xyz="2.4665038927900798e-05 -6.015326359243289e-08 -0.005150438004958846"/>
        <mass value="0.02540134740060902"/>
        <inertia ixx="1e-06" ixy="-0.0" ixz="-0.0" iyy="1e-06" iyz="0.0" izz="1e-06"/>
      </inertial>
    </link>
    <joint name="${arm_id}_joint6" type="revolute">
      <safety_controller k_position="${safety_k_position}" k_velocity="${safety_k_velocity}" soft_lower_limit="${-pi}" soft_upper_limit="${pi}"/>
      <origin rpy="0 0 0" xyz="0.0008 -0.0 -0.1630"/>
      <parent link="${arm_id}_link5"/>
      <child link="${arm_id}_link6"/>
      <axis xyz="0.0048 -0.0 -1.0"/>
      <limit effort="12" lower="${-pi}" upper="${pi}" velocity="2.6100"/>
      <dynamics damping="${joint_damping}" friction="${joint_friction}"/>
    </joint>

  </xacro:macro>
</robot>
