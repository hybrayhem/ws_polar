<?xml version='1.0' encoding='utf-8'?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="gtu_polar">
  <!-- safety_distance: Minimum safety distance in [m] by which the collision volumes are expanded and which is enforced during robot motions -->
  <!-- arm_id: Namespace of the gtu_polar arm. Serves to differentiate between arms in case of multiple instances. -->
  <xacro:macro name="gtu_polar_arm" params="arm_id:='gtu_polar' description_pkg:='gtu_polar_arm_description' connected_to:='' xyz:='0 0 0' rpy:='0 0 0'">
    <xacro:unless value="${not connected_to}">
      <joint name="${arm_id}_joint_${connected_to}" type="fixed">
        <parent link="${connected_to}"/>
        <child link="${arm_id}_link0"/>
        <origin rpy="${rpy}" xyz="${xyz}"/>
      </joint>
    </xacro:unless>
    <link name="${arm_id}_link0">
      <visual>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <geometry>
          <mesh filename="package://${description_pkg}/meshes/link0.dae"/>
        </geometry>
      </visual>
      <collision>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <geometry>
          <mesh filename="package://${description_pkg}/meshes/link0.dae"/>
        </geometry>
      </collision>
    </link>
    <link name="${arm_id}_link1">
      <visual>
        <origin rpy="0 0 0" xyz="0.0005 0.0 -0.095"/>
        <geometry>
          <mesh filename="package://${description_pkg}/meshes/link1.dae"/>
        </geometry>
      </visual>
      <collision>
        <origin rpy="0 0 0" xyz="0.0005 0.0 -0.095"/>
        <geometry>
          <mesh filename="package://${description_pkg}/meshes/link1.dae"/>
        </geometry>
      </collision>
    </link>
    <joint name="${arm_id}_joint1" type="revolute">
      <safety_controller k_position="100.0" k_velocity="40.0" soft_lower_limit="-2.8973" soft_upper_limit="2.8973"/>
      <origin rpy="0 0 0" xyz="-0.0005 0.0 0.095"/>
      <parent link="${arm_id}_link0"/>
      <child link="${arm_id}_link1"/>
      <axis xyz="-0.0048 0.0 1.0"/>
      <limit effort="87" lower="-2.8973" upper="2.8973" velocity="2.1750"/>
    </joint>
    <link name="${arm_id}_link2">
      <visual>
        <origin rpy="0 0 0" xyz="0.0001 -0.064 -0.144"/>
        <geometry>
          <mesh filename="package://${description_pkg}/meshes/link2.dae"/>
        </geometry>
      </visual>
      <collision>
        <origin rpy="0 0 0" xyz="0.0001 -0.064 -0.144"/>
        <geometry>
          <mesh filename="package://${description_pkg}/meshes/link2.dae"/>
        </geometry>
      </collision>
    </link>
    <joint name="${arm_id}_joint2" type="revolute">
      <safety_controller k_position="100.0" k_velocity="40.0" soft_lower_limit="-1.7628" soft_upper_limit="1.7628"/>
      <origin rpy="0 0 0" xyz="-0.0005 0.064 0.049"/>
      <parent link="${arm_id}_link1"/>
      <child link="${arm_id}_link2"/>
      <axis xyz="-1.0 -0.0048 -0.0048"/>
      <limit effort="87" lower="-1.7628" upper="1.7628" velocity="2.1750"/>
    </joint>
    <link name="${arm_id}_link3">
      <visual>
        <origin rpy="0 0 0" xyz="0.0024 0.0797 -0.5865"/>
        <geometry>
          <mesh filename="package://${description_pkg}/meshes/link3.dae"/>
        </geometry>
      </visual>
      <collision>
        <origin rpy="0 0 0" xyz="0.0024 0.0797 -0.5865"/>
        <geometry>
          <mesh filename="package://${description_pkg}/meshes/link3.dae"/>
        </geometry>
      </collision>
    </link>
    <joint name="${arm_id}_joint3" type="revolute">
      <safety_controller k_position="100.0" k_velocity="40.0" soft_lower_limit="-2.8973" soft_upper_limit="2.8973"/>
      <origin rpy="0 0 0" xyz="-0.0014 -0.1437 0.4425"/>
      <parent link="${arm_id}_link2"/>
      <child link="${arm_id}_link3"/>
      <axis xyz="1.0 0.0048 0.0048"/>
      <limit effort="87" lower="-2.8973" upper="2.8973" velocity="2.1750"/>
    </joint>
    <link name="${arm_id}_link4">
      <visual>
        <origin rpy="0 0 0" xyz="0.0016 0.2627 -0.5865"/>
        <geometry>
          <mesh filename="package://${description_pkg}/meshes/link4.dae"/>
        </geometry>
      </visual>
      <collision>
        <origin rpy="0 0 0" xyz="0.0016 0.2627 -0.5865"/>
        <geometry>
          <mesh filename="package://${description_pkg}/meshes/link4.dae"/>
        </geometry>
      </collision>
    </link>
    <joint name="${arm_id}_joint4" type="revolute">
      <safety_controller k_position="100.0" k_velocity="40.0" soft_lower_limit="-3.0718" soft_upper_limit="-0.0698"/>
      <origin rpy="0 0 0" xyz="0.0009 -0.1830 0.0"/>
      <parent link="${arm_id}_link3"/>
      <child link="${arm_id}_link4"/>
      <axis xyz="0.0048 -1.0 0.0"/>
      <limit effort="87" lower="-3.0718" upper="-0.0698" velocity="2.1750"/>
    </joint>
    <link name="${arm_id}_link5">
      <visual>
        <origin rpy="0 0 0" xyz="0.0008 0.4142 -0.5865"/>
        <geometry>
          <mesh filename="package://${description_pkg}/meshes/link5.dae"/>
        </geometry>
      </visual>
      <collision>
        <origin rpy="0 0 0" xyz="0.0008 0.4142 -0.5865"/>
        <geometry>
          <mesh filename="package://${description_pkg}/meshes/link5.dae"/>
        </geometry>
      </collision>
    </link>
    <joint name="${arm_id}_joint5" type="revolute">
      <safety_controller k_position="100.0" k_velocity="40.0" soft_lower_limit="-2.8973" soft_upper_limit="2.8973"/>
      <origin rpy="0 0 0" xyz="0.0007 -0.1515 0.0"/>
      <parent link="${arm_id}_link4"/>
      <child link="${arm_id}_link5"/>
      <axis xyz="1.0 0.0048 0.0048"/>
      <limit effort="12" lower="-2.8973" upper="2.8973" velocity="2.6100"/>
    </joint>
  </xacro:macro>
</robot>
